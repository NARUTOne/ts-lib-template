{
  "name": "ts-lib-template",
  "version": "1.0.0",
  "description": "创建ts库模板",
  "main": "dist/index.js",
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "log": "rimraf CHANGELOG.md && conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "commit": "git-cz",
    "lint": "eslint src --fix --ext",
    "lint-strict": "eslint src --max-warnings 0",
    "build": "npm run lint-strict && rimraf dist types && gulp"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NARUTOne/ts-lib-template.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NARUTOne/ts-lib-template/issues"
  },
  "homepage": "https://github.com/NARUTOne/ts-lib-template#readme",
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "npm run lint-strict"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "commitizen": "^4.2.1",
    "conventional-changelog-cli": "^2.1.0",
    "cz-customizable": "^6.3.0",
    "eslint": "^7.8.1",
    "gulp": "^4.0.2",
    "gulp-typescript": "^6.0.0-alpha.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.13",
    "merge2": "^1.4.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.0.2"
  }
}
